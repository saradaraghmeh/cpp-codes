#include <iostream>
using namespace std;

int linearsearch (int arr[] , int size , int n) {
    for (int i=0 ; i<size ; i++)
    if (arr[i] == n)
    return i ;
    return -1;
}

int main () {
    int a[7] = {3 , 5 , 12 , 7 , 8 , 4 , 9};
    int v = linearsearch (a , 7 , 7);
    if (v == -1)
    cout << 7 << "not found";
    else
    cout << "found at index : " << v;
    return 0;
}
