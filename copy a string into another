#include <iostream>
using namespace std;

void copy (char * s1 , const char s2 [] ) {
    int i=0;
    for (; *s2 ; i++)
    *(s1 + i) = *s2++;
}

void copy2 (char s1[] , const char s2[]) {
    for (int i =0 ; s1[i] = s2[i] ; i++);
}

int main () {
    char str[20] , str3[20];
    const char str2[] = "hello";
    copy (str , str2) ;
    cout << str << endl;
    copy2 (str3 , str2);
    cout<< str3;
    return 0;
}
